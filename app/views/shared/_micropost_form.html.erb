<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content,
      placeholder: t("shared.micropost_form.placeholder_text") %>
  </div>
  <%=f.submit t("shared.micropost_form.submid_text"), class: "btn btn-primary"%>
  <span class="image">
    <%= f.file_field :image, accept: Settings.mircropost.img_type %>
  </span>
<% end %>
