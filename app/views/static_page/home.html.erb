<% provide :title, t(".subtitle") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3> <%= t ".micropost_feed" %> </h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class = "center jumbotron">
    <h1><%= t ".subtitle" %></h1>
      <p>
        <%= t ".text1" %>
        <%= link_to t(".path_text"), Settings.home.link_rails %>
        <%= t ".text" %>
      </p>
    <%= link_to t(".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%=link_to image_tag("rails.jpg", alt: "Rails logo"), Settings.home.img_link%>
<% end %>
